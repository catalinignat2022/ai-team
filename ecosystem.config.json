{
  "name": "devops-ai-agent",
  "script": "devops-ai-server.js",
  "args": "start",
  "instances": 1,
  "exec_mode": "fork",
  "watch": false,
  "max_memory_restart": "1G",
  "env": {
    "NODE_ENV": "production",
    "AGENT_PORT": "3000",
    "DASHBOARD_PORT": "3001",
    "WEBHOOK_PORT": "3002"
  },
  "error_file": "./logs/pm2-error.log",
  "out_file": "./logs/pm2-out.log",
  "log_file": "./logs/pm2-combined.log",
  "time": true,
  "autorestart": true,
  "restart_delay": 5000,
  "max_restarts": 10,
  "min_uptime": "10s",
  "kill_timeout": 5000,
  "wait_ready": true,
  "listen_timeout": 10000
}
